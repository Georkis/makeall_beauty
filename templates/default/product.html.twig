{% extends "frontend_ui.html.twig" %}

{% block title %}{{ product }}{% endblock %}

{% block body %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6" id="img-container">
                    <ul id="imageGallery">
                        <li data-thumb="{{ asset('images/' ~ product.image) }}" data-src="{{ asset('images/' ~ product.image) }}">
                            <div id="img-container">
                            <img class="img-fluid w-100" src="{{ asset('images/' ~ product.image) }}" alt="" />
                            </div>
                        </li>
                    {% for v in views %}
                        <li data-thumb="{{ asset('images/' ~ v.image) }}" data-src="{{ asset('images/' ~ v.image) }}">
                            <img class="img-fluid w-100" src="{{ asset('images/' ~ v.image) }}" alt="{{ product }}" />
                        </li>
                    {% endfor %}
                    </ul>
                </div>
                <div class="col-lg-6 col-md-6 mt-5 mt-md-0">
                    <div class="product-details">
                        <h3>
                            {{ product }}
                        </h3>
                        <div class="product-price my-2"> <span class="d-block">US $ {{ product.price | number_format(2, '.',',') }}</span></div>
                    </span>

                        <ul class="list-unstyled my-4">
                            <li><span class="text-black">Me gusta <i class="las la-heart text-danger"></i></span> {{ product.likeCount }}</li>
                            <li><span class="text-black"> Categor√≠a :</span> {{ product.categoryProduct }}</li>
                        </ul>
                        {{ product.description | raw }}

                        <div class="mt-5">
                            <a class="btn btn-dark" href="{{ product.url }}" target="_blank"><i class="las la-shopping-cart me-2"></i>Ir de compra</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}