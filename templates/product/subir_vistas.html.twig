{% extends "base.html.twig" %}

{% block title %}
    Subir images a las vista
{% endblock %}
{% block body %}
    <div class="page-header">
        <h4 class="page-title">Product</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="{{ path('dashboard') }}">
                    <i class="flaticon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-home">
                <a href="{{ path('product_index') }}">
                    Listado </a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <a href="#">Subir vistas a - {{ product }}</a>
            </li>
        </ul>
    </div>
    <disv class="row">
        <div class="col-lg-5">
            <div class="card">
                <div class="card-header">
                    <h5>Subir vistas</h5>
                </div>
                {{ form_start(form) }}

                <div class="card-body">
                    {{ form_widget(form) }}
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <button type="submit" class="btn btn-success"><i class="fa fa-upload"></i> Subir imagen</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        <div class="col-lg-7">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Vista del producto</h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Imagen</th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for v in views %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>
                                    <img src="{{ asset('images/' ~ v.image ) }}" alt="" class="img-fluid img-50">
                                </td>
                                <td>
                                    <a href="{{ path('producto_view_images_eliminar', {'id': v.id}) }}" class="text-danger"><i class="fa fa-trash-alt"></i></a>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td class="text-danger" colspan="2">No hay vistas que mostrar</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </disv>
{% endblock %}
