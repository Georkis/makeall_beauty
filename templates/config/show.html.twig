{% extends 'base.html.twig' %}

{% block title %}Config{% endblock %}

{% block body %}
    <div class="page-header">
        <h4 class="page-title">Config</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="{{ path('dashboard') }}">
                    <i class="flaticon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-home">
                <a href="{{ path('config_index') }}">
                    Listado
                </a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <a href="#">Mostrar </a>
            </li>
        </ul>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Mostrar</h5>
                    <div class="card-tools float-right">
                        <a href="{{ path('config_index') }}" class="btn btn-secondary btn-xs"><i class="fa fa-list"></i> Regresar</a>
                        <a href="{{ path('config_edit', {'id': config.id}) }}" class="btn btn-warning btn-xs"><i class="fa fa-edit"></i> Editar</a>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                                            <tr>
                                    <th>Id</th>
                                    <td>{{ config.id }}</td>
                                </tr>
                                                            <tr>
                                    <th>Nombre</th>
                                    <td>{{ config.nombre }}</td>
                                </tr>
                                                            <tr>
                                    <th>Valor</th>
                                    <td>{{ config.valor }}</td>
                                </tr>
                                                            <tr>
                                    <th>Descripcion</th>
                                    <td>{{ config.descripcion }}</td>
                                </tr>
                                                        </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
