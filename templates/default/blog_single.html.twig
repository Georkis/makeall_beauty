{% block js %}
    <script>
        function likeless(element) {
            let url = $(element).attr('data-url');
            $.ajax({
                url: url,
                method: 'POST',
                beforeSend: function () {
                    $(element).attr('disabled','disabled');
                }
            });
        }
    </script>
