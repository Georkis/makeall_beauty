{% extends "base.html.twig" %}

{% block title %}Perfil{% endblock %}
{% block body %}
    <div class="page-header">
        <h4 class="page-title">User</h4>
        <ul class="breadcrumbs">
            <li class="nav-home">
                <a href="{{ path('dashboard') }}">
                    <i class="flaticon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <a href="{{ path('user_index') }}">Listado</a>
            </li>
            <li class="separator">
                <i class="flaticon-right-arrow"></i>
            </li>
            <li class="nav-item">
                <a href="#">Crear nuevo User</a>
            </li>
        </ul>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="card">
                <div class="card-body text-center">
                    {% if user.image %}
                        <img src="{{ asset('images/' ~ user.image) }}" alt="{{ user.username }}" class="img-fluid img-circle">
                    {% else %}
                        <i class="fa fa-user-edit fa-3x img-circle"></i>
                    {% endif %}
                    <button class="btn btn-warning btn-block mt-2">Editar imagen</button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Editar</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="form-group">
                        <button class="btn btn-success">Guardar</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
